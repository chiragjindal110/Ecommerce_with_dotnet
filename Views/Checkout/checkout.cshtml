@model string

<html>

<head>
    <link rel="stylesheet" type="text/css" href="~/css/checkout_page.css">
    <link rel="stylesheet" type="text/css" href="~/css/cart.css">

</head>

<body>
    <div class="header">
        <h1>Healthifyy</h1>
        <h2>CHECKOUT</h2>
        <button class="about-us">About US</button>
    </div>
    <div class="container">
        <div class="left-pane">
            <h1>Enter address</h1>
            <input type="text" placeholder="Enter address" id="address"><button id="address-submit">Submit</button>
            <h3 class="stored-address" id="stored-address">@Model</h3><button id="change-address-btn">Change address</button>
            <h5 id="address-saved-flag" class="address-saved-flag">Address Saved!!</h5>
            <hr><br>
            <h1>Payment Method</h1>
            <input type="radio" id="cod" name="PaymentMethod"><label for="cod">Cash On Delivery</label><br>
            <input type="radio" id="OnlinePayment" name="PaymentMethod"><label for="OnlinePayment">Online Payment</label><br>
            <hr><br>
            <div id="products_div"></div>
        </div>
        <div class="right-pane">
            <h1 style="text-align: center;">Order Summary</h1>
            <table>
                <tr>
                    <td>Total Amount:</td>
                    <td style="text-align: center;">₹<span id="amount"></span></td>
                </tr>
                <tr>
                    <td>Total items:</td>
                    <td id="items" style="text-align: center;"></td>
                </tr>
            </table>
            <button id="placeorder_btn" class="place-order-btn">Place Order</button>
            <p class="p">By placing your order, you agree to Healthifyy's<br> privacy notice and conditions of use.</p>
        </div>
    </div>
    <script type="text/javascript" src="~/js/checkout_page.js"></script>
</body>

</html>